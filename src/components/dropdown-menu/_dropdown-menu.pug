	each menuItem, i in menuItems
		div.js-submenu(block="dropdown-menu" data-menu-lev-2=i)
			button.js-lev2-back-btn(elem="back-btn") #{menuItem.menuTitle}
			button.js-close-submenu-btn(elem="close-btn")
				+svg('cross')
			div(elem="dropdown-menu-items")
				if menuItem.cars
					ul(elem="list-cars")
						each car, i in menuItem.cars
							li(elem="car-item")
								a.js-menu-lev3(href="#" elem="link-wrap" data-menu-Lev3=i)
									img(elem="car-img" src=`img/resources/cars/${car.img}.jpg` srcset=`img/resources/cars/${car.img}_2x.jpg 2x` alt="")
									div(elem="item-info")
										p #{car.name}
										if car.price
											span #{car.price} <span>₽</span>
					+dropdown-menu-cars({
						cars: menuItem.cars,
						iconsInfo: menuItem.iconsInfo,
					})
				if menuItem.offers
					div(elem="list-wrap")
						.row.no-gutters
							each offer, i in menuItem.offers
								.col-xl-2
										h3.js-menu-lev3(elem="submenu-title" data-menu-lev3=i) #{offer.title}
										div(elem="menu-lev-3")
											div(elem="content" data-submenu-lev3=i)
												button.js-lev3-back-btn(elem="back-btn") #{offer.title}
												ul
													each item in offer.menuItems
														li
															a(href="#" elem="link-item") #{item}
				if menuItem.owners
					div(elem="list-wrap")
						.row.no-gutters
							each offer, i in menuItem.owners
								.col-xl-3
										h3.js-menu-lev3(elem="submenu-title" data-menu-lev3=i) #{offer.title}
