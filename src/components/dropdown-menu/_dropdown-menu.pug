												ul
													each item in offer.menuItems
														li
															a(href="#" elem="link-item") #{item}
					div(elem="offers-icons")
						.row.no-gutters.justify-content-xl-center
							each iconOwner in menuItem.iconsOwners
								.col-xl-2
									a(elem="icons-wrap" href="#")
										+svg(iconOwner.icon)(elem="offers-icon")
